{
  "name": "@org/database",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "unbuild --stub",
    "build": "unbuild",
    "db:dbml": "pnpm --package=mkdirp dlx mkdirp '.output' && pnpm --package=@dbml/cli dlx db2dbml postgres $DATABASE_URL -o ./.output/schema.dbml",
    "db:deploy": "drizzle-kit push --verbose --strict --config=drizzle.config.ts",
    "db:drop": "drizzle-kit drop --config=drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:generate:empty": "drizzle-kit generate --config=drizzle.config.ts --custom",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:seed": "jiti ./scripts/seed",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "dev": "unbuild --stub",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@org/storage": "workspace:*",
    "@org/utils": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "defu": "^6.1.4",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "jiti": "^2.5.1",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
}
