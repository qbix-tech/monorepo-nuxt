{
  "name": "@org/source",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm dev:all",
    "dev:email": "nx run @org/email:preview:watch",
    "dev:all": "nx run-many --projects=apps/* --exclude=apps/_*,workers/database-manager --target=dev --parallel 10 --output-style stream",
    "d": "pnpm dx && pnpm dev",
    "dx": "pnpm i && pnpm dx:prepare && pnpx tsx ./scripts/init.env.ts && pnpm dx:up && pnpm db:migrate && pnpm db:seed",
    "dx:up": "docker compose --env-file .env -f deployments/development/compose.yaml up -d",
    "dx:down": "docker compose -f deployments/development/compose.yaml down",
    "dx:prepare": "nx run-many --target=prepare --parallel 10",
    "db:studio": "nx run @org/database:db:studio",
    "db:generate": "nx run @org/database:db:generate",
    "db:generate:empty": "nx run @org/database:db:generate:empty",
    "db:migrate": "nx run @org/database:db:migrate",
    "db:drop": "nx run @org/database:db:drop",
    "db:deploy": "nx run @org/database:db:deploy",
    "db:seed": "nx run @org/database:db:seed",
    "db:dbml": "nx run @org/database:db:dbml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch=true"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nx": "21.3.10",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.0.0"
  }
}
