{
  "name": "@org/source",
  "private": true,
  "scripts": {
    "prepare": "husky && pnpm dx:prepare",
    "preinstall": "npx only-allow pnpm",
    "build:simple": "nx run @org/simple:build",
    "build:database-manager": "nx run @org/database-manager:build",
    "build:packages": "nx run-many --projects=packages/* --target=build --parallel 10 --output-style stream",
    "preview:simple": "nx run @org/simple:preview",
    "preview:database-manager": "nx run @org/database-manager:preview",
    "dev": "pnpm dev:all",
    "dev:simple": "nx run @org/simple:dev",
    "dev:layer:i18n": "nx run @org/i18n:dev",
    "dev:layer:ui": "nx run @org/ui:dev",
    "dev:email": "nx run @org/email:preview:watch",
    "dev:database-manager": "nx run @org/database-manager:dev",
    "dev:all": "nx run-many --projects=apps/* --exclude=workers/database-manager --target=dev --parallel 10 --output-style stream",
    "d": "pnpm dx && pnpm dev",
    "dx": "pnpm i && pnpm dx:prepare && pnpx tsx ./scripts/init.env.ts && pnpm dx:up && pnpm db:migrate && pnpm db:seed",
    "dx:up": "docker compose --env-file .env -f deployments/development/compose.yaml up -d",
    "dx:down": "docker compose -f deployments/development/compose.yaml down",
    "dx:prepare": "nx run-many --target=prepare --parallel 10 --output-style stream",
    "db:studio": "nx run @org/database:db:studio",
    "db:generate": "nx run @org/database:db:generate",
    "db:generate:empty": "nx run @org/database:db:generate:empty",
    "db:migrate": "nx run @org/database:db:migrate",
    "db:drop": "nx run @org/database:db:drop",
    "db:deploy": "nx run @org/database:db:deploy",
    "db:seed": "nx run @org/database:db:seed",
    "db:dbml": "nx run @org/database:db:dbml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch=true"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nx": "21.4.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "apps/**",
    "layers/**",
    "workers/**",
    "packages/**"
  ],
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22.0.0"
  }
}
